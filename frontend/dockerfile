# Use node image for Vue 3
FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy project files
COPY . .

# Build the frontend
RUN npm run build

# Expose the port
EXPOSE 3000

# Serve the app
CMD ["npm", "run", "serve", "--", "--host", "0.0.0.0", "--port", "3000"]
